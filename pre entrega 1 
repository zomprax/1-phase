# Definimos una función para registrar un usuario en la base de datos
def registrar_usuario(base_de_datos):
    # Pedimos al usuario que ingrese los datos del nuevo usuario
    nombre = input("Ingrese el nombre del nuevo usuario: ")
    apellido = input("Ingrese el apellido del nuevo usuario: ")
    correo = input("Ingrese el correo del nuevo usuario: ")
    contraseña = input("Ingrese la contraseña del nuevo usuario: ")
    # Creamos un diccionario con los datos del nuevo usuario
    nuevo_usuario = {"nombre": nombre, "apellido": apellido, "correo": correo, "contraseña": contraseña}
    # Agregamos el nuevo usuario a la base de datos
    base_de_datos[correo] = nuevo_usuario
    print("Usuario registrado exitosamente.")

# Definimos una función para buscar un usuario en la base de datos
def buscar_usuario(base_de_datos):
    # Pedimos al usuario que ingrese el correo del usuario a buscar
    correo = input("Ingrese el correo del usuario que desea buscar: ")
    # Buscamos el correo en la base de datos
    if correo in base_de_datos:
        # Si el correo está en la base de datos, imprimimos los datos del usuario
        usuario = base_de_datos[correo]
        print("Nombre: " + usuario["nombre"])
        print("Apellido: " + usuario["apellido"])
        print("Correo: " + usuario["correo"])
    else:
        # Si el correo no está en la base de datos, informamos al usuario
        print("El correo ingresado no corresponde a ningún usuario en la base de datos.")

# Definimos una función para mostrar todos los usuarios de la base de datos
def mostrar_usuarios(base_de_datos):
    # Verificamos si la base de datos está vacía
    if len(base_de_datos) == 0:
        print("La base de datos está vacía.")
    else:
        # Recorremos la base de datos e imprimimos los datos de cada usuario
        print("Usuarios registrados:")
        for correo, usuario in base_de_datos.items():
            print("Nombre: " + usuario["nombre"])
            print("Apellido: " + usuario["apellido"])
            print("Correo: " + usuario["correo"])
            print("Contraseña: " + usuario["contraseña"])
            print("")

# Creamos una base de datos vacía
base_de_datos = {}

# Creamos un bucle infinito para mostrar el menú y permitir al usuario interactuar con el programa
while True:
    print("Menú:")
    print("1. Registrar un usuario")
    print("2. Buscar un usuario")
    print("3. Mostrar todos los usuarios")
    print("4. Salir")
    opcion = input("Ingrese una opción: ")
    # Verificamos la opción seleccionada por el usuario y llamamos a la función correspondiente
    if opcion == "1":
        registrar_usuario(base_de_datos)
    elif opcion == "2":
        buscar_usuario(base_de_datos)
    elif opcion == "3":
        mostrar_usuarios(base_de_datos)
    elif opcion == "4":
        break
    else:
        print("Opción inválida.")
